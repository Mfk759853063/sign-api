package com.porui.hjl.app.crestron.service;

import java.util.List;
import java.util.Map;

import com.porui.hjl.app.crestron.entity.APPPosition;
import com.porui.hjl.app.crestron.entity.APPSafetyPosition;
import com.porui.hjl.commons.bean.PaginationObj;
import com.porui.hjl.commons.bean.PaginationParam;

/**
 * APP接口
 * Created by pichun on 2017-04-01.
 */
public interface IAppService {

    /**
     * 发送数据到中控
     * @param msg
     * @return
     * @throws Exception
     */
	String sentToCenter(String mac,byte[] bytes) throws Exception;
	
	String sentToCenter(String mac,String content) throws Exception;
	
	boolean isExsitClient(String mac) throws Exception;
	
	/**
	 * 启动空调智能控制 定时发送数据到中控
	 * @param mac
	 * @param position
	 * @param content
	 * @return
	 * @throws Exception
	 */
	boolean sentToCenterTimer(String mac,String position,String content) throws Exception;
	
	/**
	 * 关闭空调智能控制
	 * @param mac
	 * @param position
	 * @return
	 * @throws Exception
	 */
	boolean closeTimer(String mac,String position) throws Exception;
	
	/**
     * 发送数据到音乐平板
     * @param msg
     * @return
     * @throws Exception
     */
	String sentToPad(String mac,String data) throws Exception;
	
	List<APPPosition> getPositionList(String mac) throws Exception;
	
	List<Map<String,String>> getHikeDeviceMac(String mac) throws Exception;
	
	Map<String, String> getRoomByPadMac(String padMac)throws Exception;
	
	boolean add(APPSafetyPosition entity) throws Exception;
	
	APPSafetyPosition find(Map<String,Object> param) throws Exception;
	
	List<APPSafetyPosition> getList(Map<String,Object> param) throws Exception;
	
	PaginationObj<APPSafetyPosition> getPage(PaginationParam page,Map<String,Object> param) throws Exception;
}
