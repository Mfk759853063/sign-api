package com.porui.webapi.system.service.labourer;

import java.util.HashMap;

import org.springframework.stereotype.Service;

import com.alibaba.fastjson.JSONObject;
import com.porui.webapi.system.util.TencentAPI;


@Service("labourerValidationService")
public class LabourerValidationService {
	
	public String getIDCardNumber(String imgPath, String cardType) throws Exception {
		String idCardNum = new String();
		TencentAPI api = new TencentAPI();
		JSONObject res = (JSONObject)api.getOCRIDCardInfo(imgPath, cardType);
		idCardNum = (String)res.get("id");
		return idCardNum;
	}
}
