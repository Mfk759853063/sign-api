  <select id="getHikeDeviceMac" parameterType="java.lang.String" resultType="java.util.Map">
    SELECT
    device_mac deviceMac
    FROM
    rs_room_air_device roomAirDevice
    where
    roomAirDevice.room_id = (select room.id from um_room room where room.device_mac = #{mac,jdbcType=VARCHAR} and room.status !='9') and roomAirDevice.status != '9'
    order by CREATE_TIME DESC
  </select>
  
  <select id="getRoomByPadMac" parameterType="java.lang.String" resultType="java.util.Map">
